{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "es6"],
      "module": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": true,
      "removeComments": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./*"]
      }
    }
  }